pipeline {
    agent any
    tools {
        nodejs 'node20'
    }
    environment {
        scannerHome = tool name: 'sonar-scanner'
    }
    stages {
        stage('Scan') {
            steps {
                withSonarQubeEnv(instalationName: 'sonar-local') {
                    sh '${scannerHome}/bin/sonar-scanner'
                }
            }
        }
    }
}